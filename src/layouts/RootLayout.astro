---
import '@fontsource/nunito'
import '@fontsource/vollkorn'
import '../styles/reset.css'
import '../styles/main.css'

import BodyLayout from './BodyLayout.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<BodyLayout>
		<slot />
	</BodyLayout>
</html>

<style>
	:root {
	  --font-size-xs: clamp(0.69rem, calc(0.67rem + 0.12vw), 0.78rem);
	  --font-size-s: clamp(0.83rem, calc(0.76rem + 0.39vw), 1.11rem);
	  --font-size-base: clamp(1.00rem, calc(0.84rem + 0.80vw), 1.56rem);
	  --font-size-m: clamp(1.20rem, calc(0.91rem + 1.44vw), 2.21rem);
	  --font-size-ml: clamp(1.44rem, calc(0.96rem + 2.41vw), 3.12rem);
	  --font-size-lg: clamp(1.73rem, calc(0.96rem + 3.84vw), 4.42rem);
	  --font-size-xl: clamp(2.07rem, calc(0.88rem + 5.96vw), 6.25rem);
	  --font-size-xxl: clamp(2.49rem, calc(0.68rem + 9.06vw), 8.83rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: Nunito;
		padding: 1em;
		margin: auto;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		max-width: 100ch;
		margin-right: auto;
	}

  img {
    margin: auto;
  }
	
</style>
